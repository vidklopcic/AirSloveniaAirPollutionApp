<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>


    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TitleWhite">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="BoldTitleWhite" parent="TitleWhite">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SubtitleWhite" parent="TitleWhite">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SubtitleBoldWhite" parent="SubtitleWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AqiChartTextSeparator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/aqi_overview_separator_text_color</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="AqiChartSpacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AqiChartBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">1</item>
        <item name="android:gravity">bottom|center</item>
    </style>

    <style name="AqiChartBar.content">
        <item name="android:layout_width">@dimen/aqi_overview_chart_bar_width</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AqiChartLabel.layout">
        <item name="android:background">@color/aqi_overview_x_labels_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AqiChartLabel.layout.container">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/aqi_overview_x_labels_bg</item>
        <item name="android:layout_height">@dimen/pollutant_label_bar_height</item>
    </style>

    <style name="AqiChartLabel" parent="Wrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AqiChartLabel.subtitle" parent="Wrap">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="FABLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
